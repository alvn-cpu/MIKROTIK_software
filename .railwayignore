# Prevent Railway from detecting frontend/backend as separate services
# This forces Railway to treat this as a single monorepo deployment
frontend/package.json
backend/package.json

# But still include the directories themselves
!frontend/
!backend/

# Development files
.git/
.gitignore
README.md
docs/
*.md

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Local environment files
.env.local
.env.development
.env.test

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids/
*.pid
*.seed
*.pid.lock

# Coverage directory used by tools like istanbul
coverage/

# Test files
**/__tests__/**
**/*.test.js
**/*.spec.js

# Build artifacts (let Railway build these)
frontend/build/
backend/public/
frontend/dist/
backend/dist/